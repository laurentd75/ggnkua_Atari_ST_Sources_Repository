  IF p=6
    PRINT "links unten"
  ENDIF
  IF p=10
    PRINT "rechts unten"
  ENDIF
  IF p=9
    PRINT "rechts oben"
  ENDIF
  IF p=5
    PRINT "links oben"
  ENDIF
  EXIT IF p=128
  PAUSE 10
LOOP
