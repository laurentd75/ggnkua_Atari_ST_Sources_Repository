VOID XBIOS(5,L:-1,L:-1,0)
' ***************************************************************************
' *                     EINBLENDEFFEKTE IN GFA BASIC                        *
' *                         VON HOLGER HASLBECK                             *
' ***************************************************************************
' *   FšR FARBMONITOR !  FšR DEN SW-MONITOR MšSSEN ALLE 160 IN 80 GEŽNDERT  *
' *   WERDEN !                                                              *
' ***************************************************************************
'
' DEMOBILD ERSTELLEN
'
SETCOLOR 0,7,7,7
DEFFILL 2,1
PBOX 0,0,319,199
DEFTEXT 3,0,0,23
TEXT 50,80,"EINBLEND-DEMO"
CIRCLE 10,40,60
DEFFILL 3,4
PBOX 40,110,80,180
'
' DEMOBILD IN VARIABLE ST$ LADEN
'
SGET st$
CLS
'
' EINZELNE EFFEKTE ZEIGEN
'
FOR i%=1 TO 7
  einblend(i%)
  CLS
NEXT i%
'
' DIE VERSCHIEDENSTEN EFFEKTE (ZUR NŽHEREN ERLEUTERUNG HIT-DISC-BERICHT LESEN)
'
PROCEDURE einblend(variante%)
  IF variante%=1
    FOR st%=1 TO 199
      BMOVE VARPTR(st$)+(160*st%),XBIOS(2)+(160*st%),160
      VSYNC
    NEXT st%
  ENDIF
  IF variante%=2
    FOR st%=199 TO 0 STEP -1
      VSYNC
      BMOVE VARPTR(st$)+(160*st%),XBIOS(2)+(160*st%),160
    NEXT st%
  ENDIF
  IF variante%=3
    FOR st%=0 TO 100
      VSYNC
      BMOVE VARPTR(st$)+(160*st%),XBIOS(2)+(160*st%),160
      BMOVE VARPTR(st$)+(160*(200-st%)),XBIOS(2)+(160*(200-st%)),160
    NEXT st%
  ENDIF
  IF variante%=4
    FOR st%=100 TO 0 STEP -1
      VSYNC
      BMOVE VARPTR(st$)+(160*st%),XBIOS(2)+(160*st%),160
      BMOVE VARPTR(st$)+(160*(200-st%)),XBIOS(2)+(160*(200-st%)),160
    NEXT st%
  ENDIF
  IF variante%=5
    FOR st%=200 TO 0 STEP -2
      VSYNC
      BMOVE VARPTR(st$)+(160*st%),XBIOS(2)+(160*st%),160
    NEXT st%
    FOR st%=1 TO 199 STEP 2
      VSYNC
      BMOVE VARPTR(st$)+(160*st%),XBIOS(2)+(160*st%),160
    NEXT st%
  ENDIF
  IF variante%=6
    FOR st%=1 TO 199 STEP 2
      VSYNC
      BMOVE VARPTR(st$)+(160*st%),XBIOS(2)+(160*st%),160
    NEXT st%
    FOR st%=200 TO 0 STEP -2
      VSYNC
      BMOVE VARPTR(st$)+(160*st%),XBIOS(2)+(160*st%),160
    NEXT st%
  ENDIF
  IF variante%=7
    FOR st%=0 TO 8000
      BMOVE VARPTR(st$)+st%*8,XBIOS(2)+st%*8,8
    NEXT st%
  ENDIF
RETURN
'
'  NATšRLICH KANN MAN NOCH VIELE ANDERE DINGE DAMIT MACHEN !
'
' ***************************************************************************
' *                                  ENDE                                   *
' ***************************************************************************
