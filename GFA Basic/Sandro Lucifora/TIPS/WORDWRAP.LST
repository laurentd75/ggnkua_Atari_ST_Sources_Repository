@wort.umbruch(zeile$)
'
PROCEDURE wort.umbruch(alt.zeile$)
  LOCAL pos%
  pos%=RINSTR(alt.zeile$," ")
  neu.zeile1$=LEFT$(alt.zeile$,SUB(pos%,1))
  neu.zeile2$=RIGHT$(alt.zeile$,SUB(LEN(alt.zeile$),pos%))
RETURN
