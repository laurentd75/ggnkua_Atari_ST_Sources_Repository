                        END;


TYPE    RSHDR =         RECORD
                         rshVrsn:       CARDINAL;
                         rshObject:     CARDINAL;
                         rshTedinfo:    CARDINAL;
                         rshIconblk:    CARDINAL;
                         rshBitblk:     CARDINAL;
                         rshFrstr:      CARDINAL;
                         rshString:     CARDINAL;
                         rshImdata:     CARDINAL;
                         rshFrimg:      CARDINAL;
