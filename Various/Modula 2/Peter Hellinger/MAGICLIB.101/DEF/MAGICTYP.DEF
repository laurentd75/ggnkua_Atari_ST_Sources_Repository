DEFINITION MODULE MagicTypes;

FROM SYSTEM IMPORT BYTE, ADDRESS;


TYPE    BITBLK =        RECORD
                         bWd:           INTEGER;
                         bHt:           INTEGER;
                         planeCt:       INTEGER;
                         fgCol:         INTEGER;
                         bgCol:         INTEGER;
                         opTab:         ARRAY [0..3] OF BYTE;
                         sXmin:         INTEGER;
                         sYmin:         INTEGER;
                         sForm:         ADDRESS;
                         sNxwd:         INTEGER;
                         sNxln:         INTEGER;
                         sNxpl:         INTEGER;
                         dXmin:         INTEGER;
                         dYmin:         INTEGER;
                         dForm:         ADDRESS;
                         dNxwd:         INTEGER;
                         dNxln:         INTEGER;
                         dNxpl:         INTEGER;
                         pAddr:         ADDRESS;
                         pNxln:         INTEGER;
                         pNxpl:         INTEGER;
                         pMask:         INTEGER;
                         filler:        ARRAY [0..23] OF BYTE;
                        END;

TYPE    PtrFONTHDR =    POINTER TO FONTHDR;
        FONTHDR =       RECORD
                         fontId:        INTEGER;
                         point:         INTEGER;
                         name:          ARRAY [0..31] OF CHAR;
                         firstAde:      CARDINAL;
                         lastAde:       CARDINAL;
                         top:           CARDINAL;
                         ascent:        CARDINAL;
                         half:          CARDINAL;
                         descent:       CARDINAL;
                         bottom:        CARDINAL;
                         maxCharwidth:  CARDINAL;
                         maxCellwidth:  CARDINAL;
                         leftOffset:    CARDINAL;
                         rightOffset:   CARDINAL;
                         thicken:       CARDINAL;
                         ulSize:        CARDINAL;
                         lighten:       CARDINAL;
                         skew:          CARDINAL;
                         flags:         BITSET;
                         horTable:      POINTER TO ARRAY [0..255] OF CARDINAL;
                         offTable:      POINTER TO ARRAY [0..255] OF CARDINAL;
                         datTable:      ADDRESS;
                         formWidth:     CARDINAL;
                         formHeight:    CARDINAL;
                         nextFont:      PtrFONTHDR;
                        END;


TYPE    IMGHEADER =     RECORD
                         imVersion:     INTEGER;
                         imHeadlength:  INTEGER;
                         imNplanes:     INTEGER;
                         imPatlen:      INTEGER;
                         imPixwidth:    INTEGER;
                         imPixheight:   INTEGER;
                         imScanwidth:   INTEGER;
                         imNlines:      INTEGER;
                        END;


TYPE    PtrLINEA =      POINTER TO LINEA;
        LINEA =         RECORD
