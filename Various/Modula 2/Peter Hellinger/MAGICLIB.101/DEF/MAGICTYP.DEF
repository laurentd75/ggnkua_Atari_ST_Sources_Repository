                         bgcol:         INTEGER;
                         fgcol:         INTEGER;
                         image:         ARRAY [0..31] OF INTEGER;
                        END;


TYPE    PtrSYSHDR =     POINTER TO SYSHDR;
        SYSHDR =        RECORD
                         osEntry:       CARDINAL;
                         osVersion:     CARDINAL;
                         osStart:       ADDRESS;
                         osBase:        ADDRESS;
                         osMembot:      ADDRESS;
                         osShell:       ADDRESS;
                         osMagic:       ADDRESS;
