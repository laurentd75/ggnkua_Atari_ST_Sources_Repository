                        END;


TYPE    MFORM =         RECORD
                         mfXhot:        INTEGER;
                         mfYhot:        INTEGER;
                         mfNplanes:     INTEGER;
                         mfFg:          INTEGER;
                         mfBg:          INTEGER;
                         mfMask:        ARRAY [0..15] OF CARDINAL;
