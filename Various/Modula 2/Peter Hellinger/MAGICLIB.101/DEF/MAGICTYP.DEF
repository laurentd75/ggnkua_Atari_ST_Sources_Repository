                         SCRTCHP:       ADDRESS;
                         SCRTP2:        INTEGER;
                         TEXTBG:        INTEGER;
                         COPYTRAN:      INTEGER;
                         SEEDABORT:     ADDRESS;
                        END;

TYPE    PtrLINEAFonts = POINTER TO ARRAY [0..2] OF PtrFONTHDR;



