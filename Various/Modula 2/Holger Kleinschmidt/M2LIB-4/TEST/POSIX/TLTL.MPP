MODULE tltl;

(* Das Programm testet das Load-Time-Linking. Hierzu muû das Programm
 * gleich nach dem Start der Shell als erstes Modul zweimal direkt
 * hintereinander gestartet werden. Wenn beim zweiten Start nicht Null
 * ausgegeben wird, lÑdt die Shell Module nicht Åber 'Pexec', so dass
 * sie keine eigenstÑndigen Prozesse sind. In diesem Fall sollten Programme
 * unter MiNT oder einer anderen Multitasking-Erweiterung lieber nicht
 * im Load-Time-Linking laufen, sondern nur als eigenstÑndige, gelinkte
 * Programme. Nach dem Test sollte die Shell verlassen werden.
 *
 * 23-Dez-95, Holger Kleinschmidt
 *)

#if (defined MM2)
(*$E MOS *)
#if (defined __DEBUG_CODE__)
IMPORT TOSDebug;
#endif
#endif

VAL_INTRINSIC
CAST_IMPORT

FROM SYSTEM IMPORT
(* TYPE *) ADDRESS;

FROM OSCALLS IMPORT
(* PROC *) Psignal;

FROM DosIO IMPORT
(* PROC *) WriteHex, WriteString, WriteLn, Read;

(*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*)

VAR
  old : ADDRESS;
  ch  : CHAR;

(*===========================================================================*)

BEGIN
 IF ~Psignal(30, 12345678H, old) THEN
   WriteString("Der Test hat nur Sinn, wenn die GEMDOS-Funktion 'Psignal'");
   WriteLn;
   WriteString("unterstÅtzt wird (MiNT o.Ñ.)!");
   WriteLn;
 ELSE
   WriteHex(old, 8); WriteLn;
   IF CAST(LONGCARD,old) # VAL(LONGCARD,0) THEN
     WriteString("Das Load-Time-Linking lÑuft nicht Åber 'Pexec' -- Vorsicht!");
     WriteLn;
   END;
 END;
 Read(ch);
END tltl.
